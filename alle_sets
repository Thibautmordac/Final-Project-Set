import itertools
import random
from stapel import creëren_stapel
from is_set import *
def mogelijke_sets(kaarten_op_tafel):
    """Geeft alle mogelijke SET's terug van een collectie van 12 kaarten"""
    mogelijke_sets = []
    for combo in itertools.combinations(kaarten_op_tafel, 3):
        if is_set(*combo):
            mogelijke_sets.append(combo)
    return mogelijke_sets
#test case voor 12 willekeurige kaarten
stapel = creëren_stapel()
tafel = random.sample(stapel, 12)
print([kleuren[k.color]+symbolen[k.symbol]+vulling[k.shading]+str(k.number+1) for k in tafel])
gevonden = mogelijke_sets(tafel)

def obj_naar_str(k):
    return kleuren[k.color]+symbolen[k.symbol]+vulling[k.shading]+str(k.number+1)

print(f"Het aantal mogelijke sets zijn: {len(gevonden)}")
for p, set in enumerate(gevonden, start=1):
    print(f'SET {p}')
    for k in set:
        print(' ', obj_naar_str(k))
    print()
